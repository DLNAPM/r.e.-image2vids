rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /searches/{searchId} {
      
      // Helper function to check if user is owner
      function isOwner() {
        return request.auth.uid == resource.data.userId;
      }
      
      // Helper function to check if user is in shared list
      // We use 'in' operator which is cleaner for list membership
      function isShared() {
        return resource.data.sharedWith is list && (
          (request.auth.token.email in resource.data.sharedWith) ||
          (request.auth.token.email.lower() in resource.data.sharedWith)
        );
      }

      // Allow creating a new search if you are authenticated
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow reading (list/get) if you are owner OR it is shared with you
      allow read: if request.auth != null && (isOwner() || isShared());

      // Allow update/delete ONLY if you are the owner
      allow update, delete: if request.auth != null && isOwner();
    }
  }
}
